{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDirs": ["src", "db"]
  },
  "include": ["src/**/*", "db/**/*"],
  "exclude": ["node_modules"]
}
